<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="537dp"
        android:layout_height="694dp"
        android:layout_gravity="center"
        android:alpha="0.4"
        android:gravity="center"
        android:orientation="horizontal"
        android:rotation="10">

        <View
            android:id="@+id/animated_view"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/wave_repeating_bg_left" />

        <View
            android:id="@+id/animated_view1"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/wave_repeating_bg" />

        <View
            android:id="@+id/animated_view2"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:background="@drawable/wave_repeating_bg_right" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_gravity="center_vertical">


    </LinearLayout>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_20sdp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:textSize="@dimen/_30sdp"
        android:text="Burger Buggy"
        android:textColor="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">


